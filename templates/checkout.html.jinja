
<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Buy a Rock - Checkout</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/static/styles.css">
</head>

<body class="container buyarock">
    {% include "components/navbar.html.jinja" %}

    <h1 class="text-center my-4 ">Checkout</h1>

    <main class="container buyarock">
        <!-- Shipping Information Section -->
        <section class="mb-4">
            <div class="card">
                <div class="card-header  buyarock">
                    <h5 class="buyarock">Shipping Information</h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tbody>
                            <tr>
                                <td class="col-md-6">
                                    <label for="firstName" class="form-label">First Name</label>
                                    <input type="text" class="form-control" id="firstName" placeholder="Enter your first name">
                                </td>
                                <td class="col-md-6">
                                    <label for="lastName" class="form-label">Last Name</label>
                                    <input type="text" class="form-control" id="lastName" placeholder="Enter your last name">
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2">
                                    <label for="address" class="form-label">Address</label>
                                    <input type="text" class="form-control" id="address" placeholder="123 Main St">
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label for="city" class="form-label">City</label>
                                    <input type="text" class="form-control" id="city" placeholder="Enter your city">
                                </td>
                                <td>
                                    <label for="zip" class="form-label">Zip Code</label>
                                    <input type="text" class="form-control" id="zip" placeholder="Enter your zip code">
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </section>

        <!-- Payment Information Section -->
        <section class="mb-4 buyarock">
            <div class="card">
                <div class="card-header buyarock">
                    <h5>Payment Information</h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tbody>
                            <tr>
                                <td colspan="2">
                                    <label for="cardNumber" class="form-label">Card Number</label>
                                    <input type="text" class="form-control" id="cardNumber" placeholder="1234 5678 9012 3456">
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label for="expiryDate" class="form-label">Expiry Date</label>
                                    <input type="text" class="form-control" id="expiryDate" placeholder="MM/YY">
                                </td>
                                <td>
                                    <label for="cvv" class="form-label">CVV</label>
                                    <input type="text" class="form-control" id="cvv" placeholder="123">
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2">
                                    <label for="cardHolderName" class="form-label">Cardholder Name</label>
                                    <input type="text" class="form-control" id="cardHolderName" placeholder="Enter cardholder's name">
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </section>

        <!-- Cart Items Section -->
        <section class="mb-4">
            <div class="card">
                <div class="card-header buyarock ">
                    <h5>Cart Items</h5>
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Item</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                        {%for item in products%}
                            <tr>
                                <td>{{item['product_name']}}</td>
                                <td>{{item['quantity']}}</td>
                                <td>{{item['price']}}</td>
                                <td>{{item['price']* item['quantity']}}</td>
                            </tr>
                         {%endfor%}   
                            <tr>
                                <td colspan="3" class="text-end fw-bold">Grand Total:</td>
                                <td>{{'%.2f'|format(cart_total)}}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </section>

        <!-- Checkout Button -->
        <section class="text-center">
        <form action="/continue_sale" method="post">
            <button type="submit" class="btn btn-info btn-lg">Proceed to Checkout</button>
        </form>    
        </section>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>

</html>
